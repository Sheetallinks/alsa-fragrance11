// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../lib/prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("client") // "client" or "admin"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id            Int      @id @default(autoincrement())
  name          String
  category      String   // "women" | "men" | "attars" | "testers" | "accessories"
  price         Float
  originalPrice Float?
  salePrice     Float?   // Sale price (if different from price)
  salePercent   Float?   // Sale percentage discount
  rating        Float    @default(0)
  reviews       Int      @default(0)
  image         String
  images        String?  // JSON array of image URLs
  description   String
  notesTop      String?  // JSON array of top notes
  notesMiddle   String?  // JSON array of middle notes
  notesBase     String?  // JSON array of base notes
  size          String?  // JSON array of sizes
  inStock       Boolean  @default(true)
  isNew         Boolean  @default(false)
  isSale        Boolean  @default(false)
  badge         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
